<% layout('/layouts/boilerplate.ejs') -%>
        <div class="row">
                <div class="col-8 offset-2">
                        <form action="/listing/<%=listingData._id%>?_method=PUT" method="POST" novalidate
                                class="needs-validation" enctype="multipart/form-data">
                                <div class="editForm">
                                        <div class="mb-3">
                                                <label for="title">Title</label>
                                                <input type="text" name="title" value="<%=listingData.title%>"
                                                        placeholder="Enter you Title" id="title" class="form-control"
                                                        required>
                                                <div class="invalid-feedback">Please Enter Valid Title</div>
                                        </div>
                                        <div class="desc mb-3">
                                                <label for="desc">Description</label>
                                                <textarea name="Description" id="desc" cols="15" rows="5"
                                                        placeholder="Enter your Description" class="form-control"
                                                        required><%=listingData.desc%></textarea>
                                                <div class="invalid-feedback">Please Enter Short Description</div>

                                        </div>
                                        <img src="<%= originalImage %>" style="width: 250px;height: 200px;border-radius: 7px;">
                                        <div class="mb-3">
                                                <label for="image">Upload Image</label>
                                                <input name="image" value="<%=listingData.image.url%>"
                                                        class="form-control" id="image" type="file">
                                        </div>
                                        <div class="mb-3">
                                                <label for="price">Price</label>
                                                <input type="number" name="price" value="<%=listingData.price%>"
                                                        placeholder="Enter Price" class="form-control" id="price"
                                                        min="0" required>
                                                <div class="invalid-feedback">Please Enter Valid Price</div>

                                        </div>
                                        <div class="row">
                                                <div class="address mb-3 col-md-8">
                                                        <label for="location">Location</label>
                                                        <input type="text" name="Location"
                                                                value="<%=listingData.location%>"
                                                                placeholder="Enter Location" id="location"
                                                                class="form-control" required>
                                                        <div class="invalid-feedback">Please Enter Valid Location</div>

                                                </div>
                                                <div class="country mb-3 col-md-4">
                                                        <label for="country"></label>
                                                        <input type="text" name="Country" id="country"
                                                                class="form-control" value="<%=listingData.country%>"
                                                                placeholder="Enter Country" required>
                                                        <div class="invalid-feedback">Please Enter Valid Country</div>

                                                </div>
                                        </div>
                                        <div class="mb-3 mt-3">
                                                <button class="editBtn btn btn-dark">Edit</button>
                                        </div>
                                </div>
                        </form>
                </div>
        </div>